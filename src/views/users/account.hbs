<div class="container">
    {{#with user}}
    <div class="row g-3">
        <div class="col-5">
            <div class="card h-100">
                <img src="https://icons.veryicon.com/png/o/internet--web/prejudice/user-128.png"
                    class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">{{fullname}}</h5>
                    <p class="card-text">Email: {{email}}</p>
                    <p class="card-text">Address: {{address}}</p>
                </div>
                <div class="card-footer">
                    <small class="text-muted">Phone: {{phone}}</small>
                </div>
            </div>
        </div>
        <div class="col-7">
            <div class="card border-light mb-3">
                <div class="card-header bg-primary text-center text-white">Chỉnh sửa thông tin cá nhân</div>
                <div class="card-body">
                    <form method="POST" action="/account/{{id}}">
                        <div class="form-group">
                            <label for="name" class="form-label">Full Name</label>
                            <input type="text" class="form-control" id="name" name="name" value="{{fullname}}"/>
                        </div>
                        <div class="form-group">
                            <label for="phone" class="form-label">Phone</label>
                            <input type="text" class="form-control" id="phone" name="phone" value="{{phone}}"/>
                        </div>
                        <div class="form-group">
                            <label for="email" class="form-label">Email</label>
                            <input type="text" class="form-control" id="email" name="email" value="{{email}}"/>
                        </div>
                        <div class="form-group">
                            <label for="address" class="form-label">Address</label>
                            <input type="text" class="form-control" id="address" name="address" value="{{address}}"/>
                        </div>

                        <button type="submit" class="btn btn-primary mt-3 col-12">Lưu thông tin</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {{/with}}
</div>