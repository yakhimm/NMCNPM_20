<div class="main">
    <!-- Sign up form -->
    <section class="signup">
        <div class="container">
            <div class="signup-content">
                <div class="signup-form">
                    <h2 class="form-title">Đăng ký</h2>
                    <form method="POST" action="/signup" class="register-form" id="register-form">
                        <div class="form-group">
                            <label for="name"><i class="zmdi zmdi-account material-icons-name"></i></label>
                            <input type="text" name="fullname" id="nameRegex" placeholder="Họ và tên" required />
                        </div>

                        <span>
                            <p class="validInput" id="fullnameValid" style="color:red; font-size:medium"></p>
                        </span>


                        <div class="form-group">
                            <label for="username"><i class="zmdi zmdi-account-o material-icons-name"></i></label>
                            <input type="text" name="username" id="usernameRegex" placeholder="Tên đăng nhập"
                                required />
                        </div>

                        <span>
                            <p class="validInput" id="usernameValid" style="color:red; font-size:medium">{{usnErr}}</p>
                        </span>

                        <div class="form-group">
                            <label for="addr"><i class="zmdi zmdi-phone material-icons-name"></i></label>
                            <input type="phone" name="phone" id="phoneRegex" placeholder="Điện thoại" required />
                        </div>

                        <span>
                            <p class="validInput" id="phoneValid" style="color:red; font-size:medium"></p>
                        </span>

                        <div class="form-group">
                            <label for="email"><i class="zmdi zmdi-email material-icons-name"></i></label>
                            <input type="email" name="email" id="emailRegex" placeholder="Email" required />
                        </div>

                        <span>
                            <p class="validInput" id="emailValid" style="color:red; font-size:medium"></p>
                        </span>

                        <div class="form-group">
                            <label for="addr"><i class="zmdi zmdi-home material-icons-name"></i></label>
                            <input type="address" name="addr" id="addr" placeholder="Địa chỉ" required />
                        </div>
                        <div class="form-group">
                            <label for="pass"><i class="zmdi zmdi-lock material-icons-name"></i></label>
                            <input type="password" name="pass" id="pass" placeholder="Mật khẩu" required />
                        </div>
                        <div class="form-group">
                            <label for="re-pass"><i class="zmdi zmdi-lock-outline material-icons-name"></i></label>
                            <input type="password" name="re_pass" id="repass" placeholder="Xác nhận mật khẩu"
                                required />
                        </div>

                        {{#if rePwdErr}}
                        <span>
                            <p class="validInput" id="repassValid" style="color:red; font-size:medium">{{rePwdErr}}</p>
                        </span>
                        {{/if}}
                        <span>
                            <p class="validInput" id="repassValid" style="color:red; font-size:medium"></p>
                        </span>

                        <div class="form-group">
                            <input type="checkbox" name="agree-term" id="agree-term" class="agree-term" required />
                            <label for="agree-term" class="label-agree-term"><span></span>Tôi đồng ý tất cả điều khoản
                                trong <a href="#" class="term-service">Điều khoản dịch vụ</a></label>
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Đăng ký" />
                        </div>
                    </form>
                </div>
                <div class="signup-image">
                    <figure><img src="/images/cooking_sign_up.jpg" alt="sign up image"></figure>
                    <a href="/signin" class="signup-image-link">Đã có tài khoản!</a>
                </div>
            </div>

            <!-- Term of services -->
            {{> policy_modal}}
        </div>
    </section>
</div>

<!-- JS -->
<script src="/js/jquery-3.3.1.min.js"></script>
<script src="/js/validate.js"></script>
<script src="/js/terms_of_service.js"></script>