            <button class="btn btn-outline-success" type="submit">Search</button>
        </form>
    </ul>
</div>

<hr class="mt-2 mb-1 ms-2 me-2" />

<!--Display food-->
<div class="row wrap-row">
    {{#if recipesSearch}}
    {{#each recipesSearch}}
    <div class="col-6">
        <div class="__area text-center">
            <a href="/{{tenmon}}" class="__card">
                <button class="__favorit">
                    <ion-icon name="heart-outline"></ion-icon>
                </button>
                <img src="{{chitiet.image}}" alt="{{chitiet.image}}" class="img-fluid __img" />
                <div class="__card_detail text-left">
                    <h4>{{tenmon}}</h4>
                    <p>{{chitiet.mota}}</p>
                    {{!-- <div class="__type">
                        <span href="#">{{tags}}</span>
                    </div> --}}
                    <div class="__detail text-center justify-content-center">
                        <ion-icon name="star-outline"></ion-icon> 5
                        <ion-icon name="time-outline" class="ms-3"></ion-icon> {{chitiet.thoigian}}
                    </div>
                </div>
            </a>
        </div>
    </div>
    {{/each}}
    {{else}}
    <div class="row mt-4 ms-4">
        <span><i>Không tìm thấy công thức nấu ăn cho món {{search}}</i></span>
    </div>
    {{/if}}
</div>

