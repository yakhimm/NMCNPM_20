                                    <li><input type="checkbox" class="me-1" name="raucu" value="cachua">Cà chua</li>
                                    <li><input type="checkbox" class="me-1" name="raucu" value="carot">Cà rốt</li>
                                    <li><input type="checkbox" class="me-1" name="raucu" value="khac">Khác</li>
                                </ul>
                            </div>
                            <div>
                                <h3 class="text-primary">Tinh bột</h3>
                                <ul class="list-unstyled border-primary">
                                    <li><input type="checkbox" class="me-1" name="tinhbot" value="pho">Phở</li>
                                    <li><input type="checkbox" class="me-1" name="tinhbot" value="bun">Bún</li>
                                    <li><input type="checkbox" class="me-1" name="tinhbot" value="hutieu">Hủ tiếu</li>
                                    <li><input type="checkbox" class="me-1" name="tinhbot" value="mien">Miến</li>
                                    <li><input type="checkbox" class="me-1" name="tinhbot" value="banhmi">Bánh mì</li>
                                    <li><input type="checkbox" class="me-1" name="tinhbot" value="gao">Gạo</li>
                                    <li><input type="checkbox" class="me-1" name="tinhbot" value="khac">Khác</li>
                                </ul>
                            </div>
