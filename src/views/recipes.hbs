<div class="row text-center">
    <span class="text-danger" style="font-size: 35px;">Tất cả công thức</span>
</div>

<div class="row wrap-row">
    {{#each recipes}}
    <div class="col-6">
        <div class="__area text-center">
            <a href="/{{name}}" class="__card">
                {{!-- <button class="__favorit">
                    <ion-icon name="heart-outline"></ion-icon>
                </button> --}}
                <img src="{{detail.image}}" alt="{{detail.image}}" class="img-fluid __img" />
                <div class="__card_detail text-left">
                    <h4>{{name}}</h4>
                    <p>{{detail.mota}}</p>
                    {{!-- <div class="__type">
                        <span href="#">{{tags}}</span>
                    </div> --}}
                    <div class="__detail text-center justify-content-center">
                        <ion-icon name="star-outline"></ion-icon> 5
                        <ion-icon name="time-outline" class="ms-3"></ion-icon> {{detail.thoigian}}
                    </div>
                </div>
            </a>
        </div>
    </div>
    {{/each}}
</div>

<!--Pagination-->
<div class="row mt-5 ms-3">
    <nav aria-label="Page navigation" class="mx-auto">
        <ul class="pagination">
            <li class="page-item"><a class="page-link" href="?page={{prevPage page}}">Trước</a></li>
            {{#each (getNumberOfPage total)}}
            <li class="page-item {{#if (isEqual ../page (sum this 1))}} active {{/if}}">
                <a class="page-link" href="?page={{sum this 1}}">
                    {{sum this 1}}
                </a>
            </li>
            {{/each}}
            <li class="page-item"><a class="page-link" href="?page={{nextPage page total}}">Sau</a></li>
        </ul>
    </nav>
</div>