<div class="col-12">
    <div class="side-title mt-5 mb-4">
        <h5 class="title-text"><span>Favorite Recipes</span></h5>
    </div>

    {{#if recipesSearch}}
    {{#each recipesSearch}}
    <div class="side-content-item card mb-3" style="max-width: 540px;">
        <div class="row">
            <div class="col-5">
                <a href="/{{name}}">
                    <img src="{{detail.image}}" class="img-fluid rounded-start h-100" alt="{{name}}" title="{{name}}">
                </a>
            </div>
            <div class="card-body col-7">
                <h6 class="card-title">{{name}}</h6>
            </div>
        </div>
    </div>
    {{/each}}
    {{/if}}

</div>

